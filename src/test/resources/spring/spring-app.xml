<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <bean class="ru.javawebinar.topjava.service.UserServiceImpl" id="jdbcUserService">
        <constructor-arg name="repository" ref="jdbcUserRepositoryImpl"/>
    </bean>

    <bean class="ru.javawebinar.topjava.service.MealServiceImpl" id="jdbcMealService">
        <constructor-arg name="repository" ref="jdbcMealRepositoryImpl"/>
    </bean>

    <bean class="ru.javawebinar.topjava.service.MealServiceImpl" id="inMemoryMealService">
        <constructor-arg name="repository" ref="inMemoryMealRepositoryImpl"/>
    </bean>

    <bean class="ru.javawebinar.topjava.service.UserServiceImpl" id="inMemoryUserService">
        <constructor-arg name="repository" ref="inMemoryUserRepositoryImpl"/>
    </bean>

    <bean class="ru.javawebinar.topjava.web.meal.MealRestController" id="mealRestController">
        <constructor-arg name="service" ref="inMemoryMealService" />
    </bean>

    <bean class="ru.javawebinar.topjava.web.user.AdminRestController" id="adminRestController">
        <constructor-arg name="service" ref="inMemoryUserService" />
    </bean>

    <!-- Not necessary, already included with component-scan -->
    <!--<context:annotation-config/>-->

     <context:component-scan base-package="ru.javawebinar.**.repository"/>

</beans>